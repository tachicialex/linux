language: c

branches:
  except:
  - xcomm_zynq
  - adi-4.19.0 # current rebased versions of master; change this when updating kernel ver

os: linux

notifications:
  email:
    on_success: change
    on_failure: always

matrix:
  include:
    - checkpatch: 1
      env: BUILD_TYPE=checkpatch DO_NOT_DOCKERIZE=1
    - env: DEFCONFIG=adi_bcm2709_defconfig ARCH=arm
    - env: DEFCONFIG=adi_bcm2711_defconfig ARCH=arm
    - env: DEFCONFIG=adi_bcmrpi_defconfig ARCH=arm
  allow_failures:
    - checkpatch: 1

script:
  - ./ci/travis/run-build-docker.sh
